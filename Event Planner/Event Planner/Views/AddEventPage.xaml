<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Event_Planner.Views.AddEventPage">
    <StackLayout>
        <Entry Placeholder="Event Name" Text="{Binding EventName}" />
        <DatePicker Date="{Binding EventDate}" />
        <Editor Placeholder="Notes" Text="{Binding Notes}" />
        <Button Text="Save Event" Command="{Binding SaveEventCommand}" />
    </StackLayout>
</ContentPage>

